<?xml version="1.0" encoding="UTF-8"?>
<listdef ordered="y" help="LIST_HELP_MAINTAIN" default_order="ref_id" default_order_type="d" page="50" identifier="tnx_id" crossPageSelection="y">
	
	<batch type="delete">
		<parameter name="SCREEN" value="TF_SCREEN"/>
		<parameter name="OPERATION_CODE" binding_code="OPERATION_TRANSACTION_DELETE"/>
		<parameter name="PRODUCT_CODE" column="product_code"/>
		<parameter name="OPTION_CODE" binding_code="OPTION_REBUILD_LIST_PENDING"/>
		<parameter name="REFERENCE_ID" column="ref_id"/>
		<parameter name="TRANSACTION_ID" column="tnx_id"/>
	</batch>

	<column name="ref_id" align="center" width="10em" loca_key="REFERENCEID"/>
	<column name="entity" align="left" width="20%" loca_key="ENTITY"/>
	<column name="applicant_name" align="left" width="20%" loca_key="ENTITY_NAME_APPLICANT"/>
	<column name="tnx_type_code" align="center" width="20%" loca_key="TYPE"/>
	<column name="tnx_stat_code" hidden="y"/>
	<column name="sub_tnx_stat_code" hidden="y"/>		
	<column name="status" align="left" width="20%" loca_key="STATUS" sort="n">
		<script>
			if (value.equals(""))
			{
				var tnxStatCode = row.getColumnValue("tnx_stat_code");
				var subTnxStatCode = row.getColumnValue("sub_tnx_stat_code");
				if(("99").equals(""+subTnxStatCode+"")|| ("").equals(""+subTnxStatCode+""))
				{
					value = com.misys.portal.common.localization.Localization.getDecode(language,"N004",""+tnxStatCode+"");
				}
				else
				{
					value = com.misys.portal.common.localization.Localization.getDecode(language,"N004",""+tnxStatCode+"") +" ("+ com.misys.portal.common.localization.Localization.getDecode(language,"N015",""+subTnxStatCode+"")+")"; 
				}
			}
			value;
		</script>
	</column>
	<column name="cur_code" align="center" width="4em" loca_key="CURCODE"/>
	<column name="amt" align="right" width="10em" loca_key="AMOUNT"/>
	<column name="inp_dttm" align="center" width="6em" loca_key="INP_DTTM"/>

	<column name="tnx_id" hidden="y"/>
	<column name="product_code" hidden="y"/>

	<!-- parameters -->
	<parameter
		name="ref_id"
		size="14"
		max_length="20"
		loca_key="REFERENCEID"
		input="y"
		default="">
	</parameter>
	<parameter
		name="entity"
		size="20"
		max_length="35"
		loca_key="ENTITY"
		input="y"
		default=""/>
	<parameter
		name="applicant_name"
		size="35"
		max_length="35"
		loca_key="ENTITY_NAME_APPLICANT"
		input="y"
		default=""
		/>
	<parameter
		name="cur_code"
		input="y"
		size="3"
		max_length="3"
		loca_key="CURCODE"
		type="currency"/>
	<!-- candidates -->	
	<candidate name="financing_request">
		<filter>
			<criteria>
				<column name="ref_id"/>
				<operator type="like"/>
				<value type="parameter">
					ref_id
				</value>
			</criteria>
			<criteria>
				<column name="entity"/>
				<operator type="like"/>
				<value type="parameter">
					entity
				</value>
			</criteria>
			<criteria>
				<column name="applicant_name"/>
				<operator type="like"/>
				<value type="parameter">
					applicant_name
				</value>
			</criteria>
			<criteria>
				<column name="cur_code"/>
				<operator type="like"/>
				<value type="parameter">
					cur_code
				</value>
			</criteria>
		</filter>
	</candidate>
	<filter or="y">
		<criteria>
			<column name="tnx_stat_code"/>
			<operator type="equal"/>
			<value type="code">
				N004_INCOMPLETE
			</value>
		</criteria>
		<criteria>
			<column name="tnx_stat_code"/>
			<operator type="equal"/>
			<value type="code">
				N004_UNCONTROLLED
			</value>
		</criteria>
	</filter>
</listdef>
