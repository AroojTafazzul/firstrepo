<?xml version="1.0" encoding="UTF-8"?>
<listdef ordered="y" default_order="ref_id" default_order_type="d" page="50">

	<column name="ref_id" align="center" width="10em" loca_key="REFERENCEID">
		<url>
			<parameter name="SCREEN" value="SI_SCREEN"/>
			<parameter name="TRANSACTION_TYPE_CODE" business_code="N002_AMEND"/>
			<parameter name="MODE_CODE" binding_code="MODE_DRAFT"/>
			<parameter name="REFERENCE_ID" column="ref_id"/>
			<parameter name="TRANSACTION_ID" column="tnx_id"/>
		</url>
	</column>
	<column name="entity" align="left" width="20%" loca_key="ENTITY"/>
	<column name="beneficiary_name" align="left" width="40%" loca_key="BENEFICIARY_NAME"/>
	<column name="cur_code" align="center" width="4em" loca_key="CURCODE"/>
	<column name="tnx_amt" align="right" width="10em" loca_key="AMOUNT"/>
	<column name="full name" computation="sum" align="left" width="40%" loca_key="USER_NAME">
		<column name="Inputter@first_name"/>	
				<column name="Inputter@last_name"/>
	</column>
	
	<column name="tnx_id" hidden="y"/>
	<column name="product_code" hidden="y"/>
	<column name="Inputter@last_name" hidden="y"/>
	<column name="Inputter@first_name" hidden="y"/>
	<column name="inp_dttm" align="center" width="6em" loca_key="INP_DTTM"/>

	<!-- parameters -->
	<parameter
		name="ref_id"
		size="14"
		max_length="20"
		loca_key="REFERENCEID"
		input="y"
		default="">
	</parameter>
	<parameter
		name="entity"
		size="35"
		max_length="35"
		loca_key="ENTITY"
		input="y"
		default=""/>
	<parameter
		name="beneficiary_name"
		loca_key="BENEFICIARY_NAME"
		size="35"
		max_length="35"
		input="y"
		config_maxLength=""
		/>
	<parameter
		name="cur_code"
		input="y"
		size="3"
		max_length="3"
		loca_key="CURCODE"/>
	<parameter
		name="user_name"
		loca_key="USER_NAME"
		size="35"
		max_length="35"
		input="y"/>

	<!-- candidates -->	
	<candidate name="standby_issued">
		<filter>
			<criteria>
				<column name="ref_id"/>
				<operator type="like"/>
				<value type="parameter">
					ref_id
				</value>
			</criteria>
			<criteria>
				<column name="entity"/>
				<operator type="like"/>
				<value type="parameter">
					entity
				</value>
			</criteria>
			<criteria>
				<column name="beneficiary_name"/>
				<operator type="like"/>
				<value type="parameter">
					beneficiary_name
				</value>
			</criteria>
			<criteria>
				<column name="cur_code"/>
				<operator type="like"/>
				<value type="parameter">
					cur_code
				</value>
			</criteria>
		</filter>
	</candidate>

	<filter or="y">
		<criteria>
			<column name="Inputter@last_name"/>
			<operator type="like"/>
			<value type="parameter">
				user_name
			</value>
		</criteria>
		<criteria>
			<column name="Inputter@first_name"/>
			<operator type="like"/>
			<value type="parameter">
				user_name
			</value>
		</criteria>
	</filter>
	
	<filter or="y">
		<criteria>
			<column name="tnx_stat_code"/>
			<operator type="equal"/>
			<value type="code">
				N004_INCOMPLETE
			</value>
		</criteria>
		<criteria>
			<column name="tnx_stat_code"/>
			<operator type="equal"/>
			<value type="code">
				N004_UNCONTROLLED
			</value>
		</criteria>
	</filter>
	<filter>
		<businesscriteria type="isAmendement"/>
	</filter>
</listdef>
