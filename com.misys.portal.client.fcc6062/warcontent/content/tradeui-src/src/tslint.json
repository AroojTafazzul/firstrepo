{
    "extends": "../tslint.json",
    "rules": {
        "array-type": [true, "array"], //modified
        "deprecation": {
          "severity": "error" //modified
        },
        "directive-selector": [
          true,
          "attribute",
          ["fccCommon","fccTrade","fccCash","fccLiquidity","fccSys","fccLoan","fccFSCM","fccFX"
            ,"fccIU"], //modified
          "camelCase"
        ],
        "component-selector": [
          true,
          "element",
          ["fcc-common","fcc-trade","fcc-cash","fcc-liquidity","fcc-sys","fcc-loan","fcc-fscm","fcc-fx"
            ,"fcc-iu", "fcc-ru", "fcc-bank", "fcc-client"], //modified
          "kebab-case"
        ],
        "max-classes-per-file": [true, 1]  //modified
    }
}
